      <h2><%= pluralize(@call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
      <% @call.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hook_id %><br>
    <%= f.select :hook_id, options_from_collection_for_select(Hook.all, :id, :url) %>
  </div>
