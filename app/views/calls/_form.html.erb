    <%= f.label :event_type %><br>
    <%= f.select :event_type, options_for_select(['created', 'updated', 'deleted', 'charged', 'refunded', 'chargeback']) %>
  </div>
  <div class="field">
    <%= f.label :data %><br>
    <%= f.text_area :data %>
  </div>
